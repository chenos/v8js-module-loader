{
    "name": "chenos/v8js-module-loader",
    "require": {
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "php-coveralls/php-coveralls": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Chenos\\V8Js\\ModuleLoader\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chenos\\V8Js\\ModuleLoader\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml && php-coveralls -v"
    }
}
